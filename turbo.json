{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "outputs": [".nuxt/**", "dist/**", ".output/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "outputs": [".nuxt/**", "dist/**", ".output/**"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
} 